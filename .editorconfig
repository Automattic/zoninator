# This file is for unifying the coding style for different editors and IDEs.
# It is based on https://core.trac.wordpress.org/browser/trunk/.editorconfig.
# See https://editorconfig.org for more information about the standard.

# WordPress Coding Standards
# https://make.wordpress.org/core/handbook/coding-standards/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
eclint_block_comment_start = /*
eclint_block_comment = *
eclint_block_comment_end = */

[*.yml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[LICENSE]
indent_style = unset
